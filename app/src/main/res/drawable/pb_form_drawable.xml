<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape>
        <solid
            android:color = "@android:color/white" />
        <corners
            android:radius="6dp"/>
        <size
            android:height="15dp"
            android:width="15dp" />
    </shape>
</item>
    <item>
        <clip>
            <shape>
                <gradient android:angle="45"
                    android:endColor="@color/other_blue"
                    android:startColor="@color/pretty_blue" />
                <size
                    android:height="15dp"
                    android:width="15dp" />
                <corners android:radius="6dp"/>
            </shape>
        </clip>
    </item>
</layer-list>