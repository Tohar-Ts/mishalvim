<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:layout_margin="20dp">

    <ImageView
        android:id="@+id/list_item_thumbnail"
        android:layout_width="71dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_identity" />


    <TextView
        android:id="@+id/list_item_text"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-6dp"
        android:layout_marginEnd="42dp"
        android:layout_toStartOf="@+id/list_item_btn"
        android:layout_toEndOf="@+id/list_item_thumbnail"
        android:layoutDirection="rtl"
        android:text="יוסף יוספזון חניך"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/list_item_btn"
        android:layout_width="40dp"
        android:layout_height="37dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_round_more_horiz_l" />
</RelativeLayout>