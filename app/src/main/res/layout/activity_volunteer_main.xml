<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/WelcomeUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-black"
            android:text="ברוך הבא!"
            android:textAlignment="center"
            android:textColor="@color/darker_other_blue"
            android:textSize="30sp" />

        <Space
            android:id="@+id/userfilloutspace"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button

            android:id="@+id/buttonFillNewForm"
            android:layout_width="230dp"
            android:layout_height="90dp"
            android:layout_margin="15dp"
            android:layout_marginTop="108dp"
            android:backgroundTint="#CCE4F6"
            android:background="@drawable/custom_button"
            android:textColor="@color/white"
            android:onClick="fillOutFormActivity"
            android:text="@string/fillform"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textStyle="bold" />

        <Space
            android:id="@+id/newformspace"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/buttonFillForm1"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"

                    android:layout_margin="15dp"
                    android:layout_marginTop="72dp"
                    android:backgroundTint="#CCE4F6"
                    android:onClick="viewOldFormActivity"
                    android:text="@string/buttonName"
                    android:textAlignment="center"
                    android:background="@drawable/custom_button"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonFillForm2"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"

                    android:layout_margin="15dp"
                    android:layout_marginTop="72dp"
                    android:backgroundTint="#CCE4F6"
                    android:onClick="viewOldFormActivity"
                    android:text="@string/button2"
                    android:background="@drawable/custom_button"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/buttonFillForm3"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginTop="72dp"
                    android:onClick="viewOldFormActivity"
                    android:text="@string/button3"
                    android:background="@drawable/custom_button"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonFillForm4"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"

                    android:layout_margin="15dp"
                    android:layout_marginTop="72dp"
                    android:backgroundTint="#CCE4F6"
                    android:text="@string/button4"
                    android:background="@drawable/custom_button"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonFillForm5"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginTop="72dp"
                    android:backgroundTint="#CCE4F6"
                    android:onClick="viewOldFormActivity"
                    android:text="@string/button5"
                    android:background="@drawable/custom_button"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonFillForm6"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"

                    android:layout_margin="15dp"
                    android:layout_marginTop="72dp"
                    android:backgroundTint="#CCE4F6"
                    android:text="@string/button6"
                    android:background="@drawable/custom_button"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonFillForm7"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginTop="72dp"
                    android:backgroundTint="#CCE4F6"
                    android:onClick="viewOldFormActivity"
                    android:text="@string/button7"
                    android:background="@drawable/custom_button"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonFillForm8"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"

                    android:layout_margin="15dp"
                    android:layout_marginTop="72dp"
                    android:backgroundTint="#CCE4F6"
                    android:text="@string/button8"
                    android:background="@drawable/custom_button"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>
