<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/calm_background"
    tools:context=".volunteerActivities.VolunteerMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="right"
        android:paddingRight="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/openFormsPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שאלונים פתוחים"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/openForm"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:alpha="0.5"
            android:background="@drawable/custome_form_button"
            android:gravity="center"
            android:text="שלב 1"
            android:textColor="@color/black"
            android:textSize="32sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/HelloUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@color/white"
        android:fontFamily="@font/varela_round"
        android:text="צהריים טובים אילת"
        android:textColor="@color/black"
        android:textSize="40sp" />

</LinearLayout>
