<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MishlavimPink.NoActionBar"
    android:background="@drawable/background_rectangles3"
    tools:context=".volunteerActivities.VolunteerMainActivity">



        <TextView
            android:id="@+id/HelloVolu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/alef"
            android:layout_centerInParent="true"
            android:text="שלום, אילת"
            android:textColor="@color/black"
            android:textSize="30sp" />

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/HelloVolu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp">


        <TextView
            android:id="@+id/openFormTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="16dp"
            android:text="מלא/י אותי!"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/openFormBtn"
            android:layout_width="600dp"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/orange"
            android:gravity="center"
            android:outlineSpotShadowColor="@color/black"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlayExtended" />

    </FrameLayout>

        <TextView
            android:id="@+id/finishedFormsPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@id/frameLayout1"
            android:layout_centerInParent="true"
            android:text="שאלונים שמורים:"
            android:textAlignment="center"
            android:textColor="#303030"
            android:textSize="40sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:scrollIndicators="right"
            android:layout_centerInParent="true"
            android:layout_below="@+id/finishedFormsPrompt">

            <GridLayout
                android:id="@+id/finishedFormsLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:columnCount="1">

            </GridLayout>


        </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/voluMainHomeFloating"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="30dp"
        android:backgroundTint="@color/green"
        android:src="@drawable/ic_home"
        app:fabCustomSize="60dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        app:menu="@menu/guide_bottom_navigation_menu" />

</RelativeLayout>
