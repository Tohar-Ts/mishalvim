<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".volunteerActivities.ViewOldFormActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/calm_background"
            >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/other_blue"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="שאלון 1"
                    android:textColor="@color/pretty_blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar">


            </LinearLayout>

            <Button
                android:id="@+id/save_btn"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="160dp"
                android:background="@drawable/custome_form_button"
                android:backgroundTint="#fa7074"
                android:onClick="VolunteerMainActivity"
                android:text="חזור לבית"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TableRow
                android:id="@+id/tableRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                app:layout_constraintTop_toBottomOf="@+id/question"
                tools:layout_editor_absoluteX="6dp">

                <LinearLayout
                    android:id="@+id/options_containers"
                    android:layout_width="405dp"
                    android:layout_height="96dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:padding="16sp">

                    <TextView
                        android:id="@+id/singleAns"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:hint="תשובה מפיירבייס"
                        android:inputType="text"
                        android:textColor="@color/black" />

                    <RadioGroup
                        android:id="@+id/multipleAns"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/radioButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="320dp"
                            android:text="כן" />

                        <RadioButton
                            android:id="@+id/radioButton5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="320dp"
                            android:text="לא" />
                    </RadioGroup>


                </LinearLayout>
            </TableRow>

            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16sp"
                android:layout_marginTop="40dp"
                android:background="@color/pretty_blue"
                android:padding="16sp"
                android:text="שאלה מהפיירבייס"
                android:textColor="@android:color/black"
                app:layout_constraintBottom_toTopOf="@+id/tableRow"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                tools:layout_editor_absoluteX="16dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>