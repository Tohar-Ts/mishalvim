<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".guideActivities.GuideAddVolunteerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.MishlavimPink"
        android:padding="30dp"
        android:background="@color/gray_background">

    <TextView
        android:id="@+id/guide_add_user_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/alef"
        android:layout_alignParentTop="true"
        android:text="@string/prompt_add_user"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"/>


            <EditText
                android:id="@+id/voluNewEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:autofillHints="@string/title_email"
                android:background="@drawable/custom_input"
                android:drawableRight="@drawable/ic_email"
                android:drawablePadding="12dp"
                android:gravity="center|right"
                android:hint="@string/title_email"
                android:inputType="textEmailAddress"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_centerInParent="true"
                android:layout_below="@id/guide_add_user_prompt"
                android:selectAllOnFocus="true" />

            <EditText
                android:id="@+id/voluNewUserName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:autofillHints="@string/title_user_name"
                android:background="@drawable/custom_input"
                android:drawableRight="@drawable/ic_person"
                android:drawablePadding="12dp"
                android:gravity="center|right"
                android:hint="@string/title_user_name"
                android:inputType="textPersonName"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_centerInParent="true"
                android:layout_below="@id/voluNewEmail"
                android:selectAllOnFocus="true" />


            <EditText
                android:id="@+id/voluNewPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:autofillHints="@string/title_user_password"
                android:background="@drawable/custom_input"
                android:drawableRight="@drawable/ic_lock"
                android:drawablePadding="12dp"
                android:gravity="center|right"
                android:hint="@string/title_user_password"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_centerInParent="true"
                android:layout_below="@id/voluNewUserName"
                android:selectAllOnFocus="true" />

            <EditText
                android:id="@+id/voluVerifyPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:autofillHints="@string/title_verify_password"
                android:background="@drawable/custom_input"
                android:drawableRight="@drawable/ic_lock"
                android:drawablePadding="12dp"
                android:gravity="center|right"
                android:hint="@string/title_verify_password"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_centerInParent="true"
                android:layout_below="@id/voluNewPassword"
                android:selectAllOnFocus="true" />


            <ProgressBar
                android:id="@+id/voluRegisterLoading"
                android:layout_width="120dp"
                android:layout_height="112dp"
                android:theme="@style/GreenProgressBarTheme"
                android:visibility="gone"
                android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/addNewVolu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_gravity="center"
        android:background="@drawable/orange_white_button"
        android:textColor="@drawable/orange_text_pressed"
        android:text="@string/action_register" />
</RelativeLayout>
