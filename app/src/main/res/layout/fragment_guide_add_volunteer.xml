<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".guideActivities.GuideAddVolunteerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.MishlavimPink"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:paddingBottom="30dp"
        android:paddingTop="20dp"
        android:background="@color/gray_background">

    <TextView
        android:id="@+id/guide_add_user_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/alef"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="30dp"
        android:text="@string/prompt_add_user"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:gravity="center" />

    <EditText
        android:id="@+id/voluNewEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints="@string/title_email"
        android:background="@drawable/search_blue_borders"
        android:drawableRight="@drawable/ic_email"
        android:drawablePadding="12dp"
        android:gravity="center|right"
        android:hint="@string/title_email"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/guide_add_user_prompt"
        android:selectAllOnFocus="true"
        android:textColorHint="@color/light_grey"
        android:drawableTint="@color/light_grey"
        />

    <EditText
        android:id="@+id/voluNewUserName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:autofillHints="@string/title_user_name"
        android:background="@drawable/search_blue_borders"
        android:drawableRight="@drawable/ic_person"
        android:drawablePadding="12dp"
        android:gravity="center|right"
        android:hint="@string/title_user_name"
        android:textColor="@color/black"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/voluNewEmail"
        android:selectAllOnFocus="true"
        android:textColorHint="@color/light_grey"
        android:drawableTint="@color/light_grey"/>


    <EditText
        android:id="@+id/voluNewPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:autofillHints="@string/title_user_password"
        android:background="@drawable/search_blue_borders"
        android:drawableRight="@drawable/ic_lock"
        android:drawablePadding="12dp"
        android:gravity="center|right"
        android:hint="@string/title_user_password"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/voluNewUserName"
        android:selectAllOnFocus="true"
        android:textColorHint="@color/light_grey"
        android:drawableTint="@color/light_grey"/>

    <EditText
        android:id="@+id/voluVerifyPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:autofillHints="@string/title_verify_password"
        android:background="@drawable/search_blue_borders"
        android:drawableRight="@drawable/ic_lock"
        android:drawablePadding="12dp"
        android:gravity="center|right"
        android:hint="@string/title_verify_password"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/voluNewPassword"
        android:selectAllOnFocus="true"
        android:textColorHint="@color/light_grey"
        android:drawableTint="@color/light_grey"/>


    <ProgressBar
        android:id="@+id/voluRegisterLoading"
        android:layout_width="120dp"
        android:layout_height="112dp"
        android:theme="@style/BlueProgressBarTheme"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/addNewVolu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/voluVerifyPassword"
        android:layout_marginTop="90dp"
        android:layout_gravity="center"
        android:background="@drawable/orange_white_button"
        android:textColor="@drawable/orange_text_pressed"
        android:text="@string/action_register" />
</RelativeLayout>
