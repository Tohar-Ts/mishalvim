<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.MishlavimPink"
        android:padding="30dp"
        android:background="#F5F5F5"
        tools:context=".guideActivities.GuideVolunteerListFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layoutDirection="rtl"
            app:theme="@style/MyTabTextStyle2"
            app:menu="@menu/setting_menu"/>

    <TextView
        android:id="@+id/guideName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/alef"
        android:gravity="right"
        android:paddingStart="40dp"
        android:paddingEnd="60dp"
        android:text=" Xמדריך"
        android:textColor="@color/dark_gray"
        android:textSize="30sp" />

            <TextView
            android:id="@+id/voluListPrompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/alef"
            android:textAlignment="textStart"
            android:paddingStart="40dp"
            android:paddingEnd="60dp"
            android:text="רשימת החניכים שלך"
            android:textColor="@color/dark_gray"
            android:textSize="30sp"
            android:layout_below="@+id/guideName"/>



        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            app:defaultQueryHint="@string/searchHint"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="300dp"

            >
        </androidx.appcompat.widget.SearchView>

        <ListView
            android:id="@+id/listview"
            android:transcriptMode="alwaysScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:layout_below="@+id/voluListPrompt"

            >
        </ListView>
</RelativeLayout>