<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MishlavimPink" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!--   color for the app bar and other primary UI elements -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--   a secondary color for controls like checkboxes and text fields -->
        <item name="colorAccent">@color/orange</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/pink</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PinkProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/pink</item>
    </style>

    <style name="GreenProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="Theme.MishlavimPink.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MishlavimPink.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MishlavimPink.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/pentagonShape</item>
    </style>

    <style name="pentagonShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">40%</item>
        <item name="cornerFamily">rounded</item>
    </style>

<!--    <style name="ActionButton" parent="@android:style/Widget.ActionButton">-->
<!--        <item name="android:paddingStart">0dp</item>-->
<!--        <item name="android:paddingEnd">0dp</item>-->
<!--        <item name="android:minWidth">0dp</item>-->
<!--    </style>-->
    <style name="MyTabStyle">
        <item name="android:actionBarTabTextStyle">@style/MyTabTextStyle</item>
    </style>

    <style name="MyTabTextStyle" parent="@android:style/Widget.ActionBar.TabText">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">@color/green</item>
    </style>

</resources>